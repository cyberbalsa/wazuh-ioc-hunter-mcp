{
  "description": "Wazuh IOC Hunter plugin hooks",
  "hooks": {
    "Setup": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "cd \"${CLAUDE_PLUGIN_ROOT}\" && npm install --ignore-scripts && npm run build",
            "timeout": 120
          }
        ]
      }
    ]
  }
}
